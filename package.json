{
  "name": "sudosos-back-end",
  "version": "0.1.0",
  "description": "Back-end API and database management for SudoSOS.",
  "main": "out/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "ts-node-dev --poll src/index.ts",
    "serve": "node out/src/index.js",
    "schema": "node out/src/database/schema.js",
    "seed": "ts-node-dev --poll src/database/seed.ts",
    "swagger": "ts-node-dev --poll src/start/swagger.ts",
    "test": "mocha -r ts-node/register --timeout 10000 --file ./test/setup.ts --reporter mocha-multi-reporters --reporter-options configFile=mocha.json 'test/**/*.ts' --exit",
    "test-file": "mocha -r ts-node/register --file ./test/setup.ts",
    "coverage": "nyc npm run test",
    "lint": "eslint src test --ext .js --ext .ts",
    "lint-fix": "eslint src test --ext .js --ext .ts --fix",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js"
  },
  "author": "",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@types/node-cron": "^2.0.3",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "date-fns": "^2.23.0",
    "dinero.js": "^1.9.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "express-swagger-generator": "^1.1.17",
    "express-swaggerize-ui": "^1.1.0",
    "jsonwebtoken": "^8.5.1",
    "ldap-escape": "^2.0.5",
    "ldapts": "^3.2.2",
    "log4js": "^6.3.0",
    "mime-types": "^2.1.33",
    "node-cron": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "stripe": "^8.201.0",
    "swagger-model-validator": "^3.0.20",
    "typeorm": "^0.2.34",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.1",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/deep-equal-in-any-order": "^1.0.1",
    "@types/dinero.js": "^1.8.1",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.1.7",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/mime-types": "^2.1.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.1",
    "@types/sinon": "^10.0.4",
    "@types/sinon-chai": "^3.2.5",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "chai-swag": "^0.1.9",
    "deep-equal-in-any-order": "^1.1.8",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-chai-expect": "^2.2.0",
    "eslint-plugin-chai-friendly": "^0.7.1",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.23.4",
    "mocha": "^9.0.2",
    "mocha-junit-reporter": "^2.0.0",
    "mocha-multi-reporters": "^1.5.1",
    "nyc": "^15.1.0",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  }
}
