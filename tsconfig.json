{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "out",
        "sourceMap": true,
        "incremental": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/declaration"
        ]
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "src/mailer/template/**/*.html"
    ],
    "exclude": [
        "node_modules"
    ],
}
