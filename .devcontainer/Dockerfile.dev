FROM node:22-alpine

# Install system dependencies
RUN apk add --no-cache \
    openssl \
    git \
    bash \
    github-cli \
    python3 \
    py3-setuptools \
    python3-dev \
    make \
    g++ \
    libc-dev

# Set working directory
WORKDIR /workspace

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Create necessary directories
RUN mkdir -p data/products data/banners data/invoices data/payout_requests data/seller_payouts data/write_offs config

# Expose ports
EXPOSE 3000 8080

# Default command (will be overridden by docker-compose)
CMD ["npm", "run", "watch"]
