{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/src/index.ts",
      "args": [
        "-r",
        "ts-node/register",
      ],
      "sourceMaps": true,
      "smartStep": true,
    },
    {
      "type": "node",
      "name": "Mocha Tests",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-r",
        "ts-node/register",
        "--no-timeouts",
        "test/**/*.ts"
      ],
      "sourceMaps": true,
      "smartStep": true,
    },
  ]
}